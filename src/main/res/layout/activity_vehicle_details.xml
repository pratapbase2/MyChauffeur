<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.mychauffeurapp.activity.Vehicle_details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/relativeLayout3">

            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Number"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:textColor="#00a1e4"
                android:id="@+id/regnum_txt"/>

            <com.mychauffeurapp.model.MyEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regnum_txt"
                android:id="@+id/reg_num"
                android:padding="10dp"
                android:hint="Registration Number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="22sp"
                android:maxLength="8"
                android:inputType="text"
                android:textCursorDrawable="@null"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectanglebox"
                android:textColorHint="#1e3e66"
                android:textColor="#1e3e66" />

            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make of Car/ Van"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/reg_num"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:textColor="#00a1e4"
                android:id="@+id/moc_txt"/>

           <!-- <com.mychauffeurapp.model.MyEditTextView
                android:layout_width="match_parent"

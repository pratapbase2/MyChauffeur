
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.mychauffeurapp.activity.BookingDetails">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container1">

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/layout">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@drawable/details_image"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_marginTop="5dp"
        android:id="@+id/lbl_id">
        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking ID"
            android:textColor="#18AAE6"
            android:textSize="18sp"
            android:layout_weight="0.2"/>
        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#18AAE6"
            android:textSize="18sp"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_id"
        android:id="@+id/lbl_2">
        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_id"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/booking_id"
            android:text="MAU345689"
            android:textColor="#1e3e66"
            android:layout_weight="0.5"
            android:textSize="22sp"/>
    <com.mychauffeurapp.model.MyTextviews
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/icon"
        android:text="Completed"
        android:layout_marginTop="5dp"
        android:textColor="#1e3e66"
        android:id="@+id/status"
        android:layout_weight="0.5"
        android:textSize="22sp"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_bar"
        android:layout_below="@+id/lbl_2"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/line1"/>
    <com.mychauffeurapp.model.MyTextviews
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup point"
        android:textColor="#18AAE6"
        android:textSize="18sp"
        android:layout_below="@+id/line1"
        android:id="@+id/pick_up"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_up"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout1">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/marker"
            android:layout_marginTop="3dp"/>

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/src_address"
            android:text="Riviere du Rempart swimming pool,\n A6,Rivere de Rempart,Mauritius\n,Rivere de Rempart,Mauritius"
            android:textSize="16sp"
            android:textColor="#1e3e66"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

    <com.mychauffeurapp.model.MyTextviews
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop point"
        android:textColor="#18AAE6"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/drop_point"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drop_point"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout3">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/marker"
            android:layout_marginTop="5dp"/>

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dest_address"
            android:text="Riviere du Rempart swimming pool,\n A6,Rivere de\n Rempart,Mauritius"
            android:textSize="16sp"
            android:textColor="#1e3e66"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="3dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/clock"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp">
            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="2 Hours"
                android:gravity="center"
                android:textColor="#1e3e66"
                android:textSize="17sp" />
            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" on 03 Nov,2015"
                android:textColor="#1e3e66"
                android:id="@+id/date"
                android:textSize="17sp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_bar"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/line2"/>


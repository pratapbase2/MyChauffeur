    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bill_paid"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total cost"
            android:textColor="#18AAE6"
            android:id="@+id/bill_lbl"
            android:layout_weight="0.5"
            android:textSize="18sp"
            />

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final cost"
            android:textSize="18sp"
            android:id="@+id/paid"
            android:textColor="#18AAE6"
            android:layout_weight="0.5"
            android:layout_toRightOf="@+id/bill_lbl"/>

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You save"
            android:textColor="#18AAE6"
            android:layout_weight="0.5"
            android:id="@+id/constant_txt"
            android:textSize="18sp"/>

        <!--<com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rupee"
            android:text="Rs. "
            android:textSize="22sp"
            android:layout_below="@+id/paid"
            android:layout_toLeftOf="@+id/save_amount" />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_paid"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actual_cost"
            android:text="Rs. 580"
            android:textColor="#1e3e66"
            android:textSize="20sp"
            android:layout_weight="0.5" />
        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/final_cost"
            android:text="Rs. 480"
            android:textSize="20sp"
            android:textColor="#1e3e66"
            android:layout_weight="0.5"
            />

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discount_amount"
            android:text="Rs. 100"
            android:textSize="20sp"
            android:textColor="#1e3e66"
            android:layout_weight="0.5" />

    </LinearLayout>
    </RelativeLayout>
    <com.mychauffeurapp.model.ButtonText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="See booking history"
        android:gravity="center"
        android:textSize="25sp"
        android:background="#00a1e4"
        android:id="@+id/booking_history"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

        <com.mychauffeurapp.model.MyTextviews
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#18aae6"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ratings and Reviews"
            android:layout_marginTop="5dp"
            android:id="@+id/textView4"
            android:textSize="19sp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
             android:layout_below="@+id/imageView4"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_bar"
            android:id="@+id/linebar1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linebar1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/details">
            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#18aae6"
                android:textSize="15sp"
                android:id="@+id/bid"
                android:layout_marginLeft="20dp"
                android:text="Booking Id:"/>
            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1e3e66"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/bid"
                android:id="@+id/booking_id"
                android:layout_marginLeft="58dp"
                android:text="Booking Id"/>

            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#18aae6"
                android:textSize="15sp"
                android:id="@+id/date_duration"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/bid"
                android:layout_marginLeft="20dp"
                android:text="Date and Duration"/>

            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1e3e66"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/booking_id"
                android:layout_toRightOf="@+id/date_duration"
                android:id="@+id/date"
                android:layout_marginLeft="15dp"
                android:text="date"/>
            <com.mychauffeurapp.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1e3e66"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/booking_id"
                android:layout_toRightOf="@+id/date"
                android:id="@+id/time"
                android:layout_marginLeft="10dp"
                android:text="on time"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_bar"
            android:id="@+id/linebar2"
            android:layout_below="@+id/details"/>

    <com.mychauffeurapp.model.MyTextviews
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="25dp"
        android:text="Rating"
        android:layout_marginTop="10dp"
        android:textColor="#18aae6"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_below="@+id/linebar2"
        />





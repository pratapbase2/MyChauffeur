<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.mychauffeurapp.activity.ResetPasswordActivity">

    <com.mychauffeurapp.model.MyTextviews
        android:text="Reset Password "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1e3e66"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:id="@+id/textView7"
        android:layout_centerHorizontal="true" />
    <com.mychauffeurapp.model.MyEditTextView
        android:layout_width="250dp"
        android:layout_marginTop="100dp"
        android:textColor="#1e3e66"
        android:textSize="20sp"
        android:hint="New Password"
        android:id="@+id/et_pwd"
        android:textCursorDrawable="@null"
        android:textColorHint="#00a1e4"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        android:layout_centerHorizontal="true" />


    <com.mychauffeurapp.model.MyEditTextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#1e3e66"
        android:textSize="20sp"
        android:id="@+id/et_confirm_pwd"
        android:textCursorDrawable="@null"
        android:hint="Confirm New Password"
        android:textColorHint="#00a1e4"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />


    <com.mychauffeurapp.model.ButtonRegularText

        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="#18aae6"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="Reset Password"
        android:id="@+id/btn_pwd_submit"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>

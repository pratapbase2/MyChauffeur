<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawingCacheQuality="low"/>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:src="@drawable/logo"
            android:id="@+id/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.mychauffeurapp.model.MyEditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:layout_below="@+id/logo"
            android:hint="Email"
            android:textSize="20sp"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            android:padding="10dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:inputType="textEmailAddress"
            android:id="@+id/email_id" />

        <com.mychauffeurapp.model.MyEditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_id"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:textSize="20sp"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            android:padding="10dp"
            android:textColorHint="#fff"
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:id="@+id/password" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sflinear"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_below="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:id="@+id/signin_email_button"
                android:src="@drawable/sign_in"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:src="@drawable/forgot_password"
                android:id="@+id/forgotpassword"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/signup"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/signup_email_button"
            android:adjustViewBounds="true"
            android:layout_below="@+id/sflinear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.mychauffeurapp.model.MyTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Have OTP?"
            android:visibility="gone"
            android:textColor="#00a1e4"
            android:id="@+id/textHaveOTP"
            android:layout_below="@+id/signup_email_button"
            android:layout_centerHorizontal="true"
            android:textIsSelectable="false"
            android:textSize="25sp" />

